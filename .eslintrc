{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"node": true
	},
	"plugins": [
		"react"
	],
	"rules": {
		"semi": 2,
		"quotes": [2, "single", "avoid-escape"],
		"curly": [2, "multi-line"],
		"strict": 0,
    	"react/jsx-no-undef": 1,
    	"react/jsx-quotes": 1,
		"react/jsx-uses-react": 1,
		"react/jsx-uses-vars": 1,
		"react/prop-types": 1,
		"react/wrap-multilines": 1
	},
	"globals": {
		"jQuery": true,
		"$": true,
		"_": true,
		"it": true,
		"Keystone": true
	}
}
